<!DOCTYPE html>
<html lang="en" ng-app="myApp">
    <head>
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular.min.js"></script>
        <script>
            var myApp = angular.module("myApp", []);

            myApp.controller("myController", ["$scope", function($scope) {
            }]);

        </script>
    </head>
    <body>
        
        <div class="container" style="margin-top: 30px;">
            <div class="row">
                <div class="col-md-4 col-md-offset-4" style="text-align: center; margin-bottom: 20px;">
                    <h1>Easenote</h1>
                </div>
            </div>
            
        
            <% if (!user) { %>
                <div style="text-align: center;">
                    <h3>Invalid approach!</h3>
                    <p>Password reset token is invalid or has expired. Please use the link that has been send to your email in two hours.</p>
                    <p>Or you can goto <a href='http://localhost:3000'>Easenote</a> to apply another reset mail.</p>
                </div>
            <% } else { %>
                <div class="row" ng-controller="myController">
                    <div class="col-md-4 col-md-offset-4">
                        <div class="panel panel-default">
                        <div class="panel-heading">Reset password of <%= user.email %></div>
                        <div class="panel-body">
                            <form role="form" method="post" action="">
                                <label>Please choose a new password to sign in.</label>
                                
                                <div class="form-group">
                                    <input type="password" class="form-control" name="newPw1" placeholder="New password" ng-model="newPw1" autofocus>
                                </div>
                                
                                <div class="form-group">
                                    <input type="password" class="form-control" name="newPw2" placeholder="Re-enter new password" ng-model="newPw2">
                                    <span class="text-danger" ng-show="newPw2 && newPw2 !== newPw1">New password doesn't match</span>
                                </div>

                                <div class="form-group">
                                    <input type="submit" class="btn btn-primary btn-block" value="Change password" ng-disabled="!newPw1 || !newPw2 || newPw1 !== newPw2">
                                </div>
                            </form>
                        </div>
                        </div>
                    </div>
                </div>     
            <% } %>
        </div>
        
        

    </body>
</html>